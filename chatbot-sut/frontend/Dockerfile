FROM node:18-alpine AS build
WORKDIR /app

# Allow overriding the API URL at build time (defaults suit Docker networking)
ARG VITE_API_URL=/api/message
ENV VITE_API_URL=${VITE_API_URL}

COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]