{
  "info": {
    "name": "Atendimentos API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Atendimento",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"nome\": \"Jo√£o Silva\", \"contato\": \"joao@example.com\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/atendimentos",
          "host": ["{{baseUrl}}"],
          "path": ["atendimentos"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Response has id\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "});",
              "pm.environment.set(\"atendimentoId\", pm.response.json().id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Atendimento",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/atendimentos/{{atendimentoId}}",
          "host": ["{{baseUrl}}"],
          "path": ["atendimentos", "{{atendimentoId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response has expected keys\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData).to.have.property('nome');",
              "    pm.expect(jsonData).to.have.property('contato');",
              "    pm.expect(jsonData).to.have.property('status');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Atendimento Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"status\": \"closed\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/atendimentos/{{atendimentoId}}",
          "host": ["{{baseUrl}}"],
          "path": ["atendimentos", "{{atendimentoId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Status updated\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('closed');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    }
  ]
}